{
  "version": "1.3.1",
  "npmClient": "pnpm",
  "loglevel": "info",
  "useNx": true,
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish new version %v",
      "syncWorkspaceLock": true
    }
  },
  "packages": [
    "examples/*",
    "packages/*"
  ]
}