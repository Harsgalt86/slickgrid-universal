{
  "name": "slickgrid-universal",
  "private": true,
  "license": "MIT",
  "author": "Ghislain B.",
  "homepage": "https://github.com/ghiscoding/slickgrid-universal",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghiscoding/slickgrid-universal.git"
  },
  "bugs": {
    "url": "https://github.com/ghiscoding/slickgrid-universal/issues"
  },
  "scripts": {
    "prebundle": "npm run lint",
    "bundle": "lerna run bundle --stream",
    "prebundle:zip": "npm run bundle",
    "bundle:zip": "lerna run bundle:zip --stream",
    "prebundle:with-tests": "npm run bundle",
    "bundle:with-tests": "npm run test",
    "build": "lerna run build --stream",
    "build:demo": "lerna run build:demo --stream",
    "rebuild": "run-s clean lint build --npm-path npm",
    "clean": "rimraf --maxBusyTries=10 packages/*/dist dist",
    "cypress": "cypress open --config-file test/cypress.json",
    "cypress:ci": "cypress run --config-file test/cypress.json",
    "dev:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling lerna run dev:watch --parallel",
    "clean:tsconfig-build-cache": "rimraf --maxBusyTries=10 packages/*/dist/tsconfig.tsbuildinfo",
    "roll-version": "lerna version --conventional-commits",
    "roll-publish": "lerna publish from-package --registry=https://registry.npmjs.org/",
    "prepublishOnly": "lerna run package:remove-browser-prop",
    "postroll-publish": "lerna run package:add-browser-prop",
    "serve:demo": "serve ./docs -l 8888",
    "lint": "eslint packages/** --ext .ts",
    "test": "jest --runInBand --coverage=true --config ./test/jest.config.js",
    "test:ci": "jest --runInBand --coverage=true --ci --config ./test/jest.config.js",
    "test:watch": "cross-env TZ='America/New_York' jest --watch --config ./test/jest.config.js"
  },
  "comments": {
    "roll-new-version": "To create a new version with lerna, run the following scripts (1) 'bundle', (2) 'roll-version' and (3) 'roll-publish' to send it over to NPM."
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*"
    ],
    "nohoist": [
      "**/mocha",
      "**/mocha/**",
      "**/jest",
      "**/jest/**",
      "**/cypress",
      "**/cypress/**"
    ]
  },
  "devDependencies": {
    "@lerna-lite/cli": "^1.0.5",
    "@lerna-lite/run": "^1.0.5",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cypress": "^9.5.3",
    "eslint": "^8.12.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "npm-run-all2": "^5.0.2",
    "rxjs": "^7.5.5",
    "serve": "^13.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=14.17.0",
    "npm": ">=6.14.8"
  }
}
