{
  "name": "slickgrid-universal",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "bundle": "lerna run bundle --stream",
    "build": "lerna run build --stream",
    "rebuild": "npm run clean && npm run build",
    "clean": "rimraf packages/*/dist dist",
    "dev:watch": "lerna run dev:watch --parallel",
    "test": "lerna run test --stream",
    "test:watch": "lerna run test:watch --stream",
    "test:common:watch": "cd packages/common && npm run test:watch",
    "diff": "lerna diff",
    "updated": "lerna updated",
    "clean:tsconfig-build-cache": "rimraf packages/*/dist/tsconfig.tsbuildinfo",
    "new-version": "lerna version --conventional-commits --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "lerna": "^3.20.2"
  },
  "engines": {
    "node": ">=12.13.1",
    "npm": ">=6.12.1"
  }
}
